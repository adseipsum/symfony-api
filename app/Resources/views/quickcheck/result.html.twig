{% extends 'base.main.html.twig' %}

{% set active_menu = 'quickcheck' %}

{% block content %}

{% include 'quickcheck/form.html.twig' %}

{% if validation_status == false %}
<div class="container" style="padding-top: 15px">
    <div class="row">
        <label>Validation result:</label>
    </div>


    {% for line in validation_lines %}
        {% if line.is_valid == true %}
        <div class="row" style="background-color: #4cae4c">
        {% else %}
        <div class="row" style="background-color: #c9302c">
        {% endif %}
            {{ line.text }}
        </div>
    {% endfor %}

    <div class="row" style="padding-top: 15px">
        <label for="comment">Error detail:</label>
        <textarea class="form-control" rows="5" id="comment">{{ validation_text }}</textarea>
    </div>

</div>
{% else %}

<div class="container">

    <div class="row">
        <label for="comment">Generation result:</label>
        <textarea class="form-control" rows="5" id="comment">{{ result }}</textarea>
    </div>

</div>

{% endif %}

{% endblock %}